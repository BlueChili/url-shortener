<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div
      class="flex flex-col justify-center items-center min-h-screen container px-3 mx-auto"
    >
      <h1 class="pb-8 text-cyan-950 text-center font-bold text-2xl md:text-3xl">
        Boston firearms url shortener
      </h1>
      <p class="font-bold mb-2">This url had already been submitted and
        shortened as:</p>
      <p class="mb-4">https://bosfirearms.com/{{data.code}}</p>

      <p class="font-bold mb-2">Quick stats:</p>
      <div class="flex flex-col gap-6 md:gap-3">
        <div
          class="hidden md:flex justify-end gap-6 font-bold border-b border-b-cyan-700"
        >
          <span class="grow shrink-0">Base URL</span>
          <span class="w-8 shrink-0 text-right">Hits</span>
        </div>

        <div
          class="flex flex-col md:flex-row justify-end gap-0.5 border border-cyan-800 md:gap-6 md:border-0 md:border-b md:border-cyan-50 p-4 rounded-lg md:p-0"
        >
          <span class="font-bold md:hidden">URL</span>
          <span class="grow 2xl:shrink-0">{{data.url}}</span>
          <span class="font-bold md:hidden">Hits</span>
          <span class="w-8 shrink-0 md:text-right">{{data.hits}}</span>
          <span class="font-bold md:hidden">Code</span>
        </div>

      </div>

      <form action="/" method="POST" class="w-full max-w-4xl">
        <label htmlFor="url" class="font-bold text-slate-800">
          Url to shorten:
        </label>
        <div class="flex gap-2">
          <input
            class="border border-slate-400 rounded block grow p-2"
            type="text"
            name="url"
          />
          <input
            type="submit"
            value="Submit"
            class="font-bold text-white bg-cyan-900 rounded px-4"
          />
        </div>
      </form>
      <a href="/archive" class="font-bold pt-8 underline">
        Archive
      </a>
    </div>
  </body>
</html>;
